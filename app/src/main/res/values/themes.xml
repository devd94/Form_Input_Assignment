<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EkacareFormAssignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EkacareFormAssignmentTheme" parent="Theme.EkacareFormAssignment">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="ProgressStyle">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">@color/color_secondary</item> <!-- Whatever color you want-->
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorPrimary">@color/color_secondary</item>
    </style>

</resources>